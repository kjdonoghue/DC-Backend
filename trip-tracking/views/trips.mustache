<html>
    <head>    
        <title>Trip Tracker | Your Trips</title>
        <link href="https://fonts.googleapis.com/css2?family=Waiting+for+the+Sunrise&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/css/styles.css" />
    </head>
    <body>
    <div class="tripsContainer">

    <div>
        <form method="POST" action="/trips/logout" class="logout">
            <button>Log Out</button>
        </form>
    </div>

    {{> header}}
   
    {{! <h1>Your Trips</h1> }}
   
    <div class="addTripContainer">
        <h2>Create a Trip</h2>
        <div class="addTrip">
            <form method="POST" action="/trips/create-trip">
            <div>
                <input type="text" placeholder = "Destination" name="title" class="tripTB"/>
                <input type="text" placeholder = "Image URL" name="image_url" class="tripTB"/>
                <input type="text" placeholder = "Departure Date" name="departure_date" class="tripTB"/>
                <input type="text" placeholder = "Return Date" name="return_date" class="tripTB"/>
                <button class="submitButton">Save</button>
            </div>
            </form>
        </div>
    </div>

    <h2>Upcoming Trips</h2>
        <div class="tlContainer">
            {{#allTrips}}

                <div class="tripListing"> 
                    <form method="POST">
                        <div class="tripImage">
                            <img src="{{image_url}}"/>
                        </div>
                        <div class="tripDetails">
                            <label><b>{{title}}</b></label>
                            <label>Departure Date: {{departure_date}}</label>
                            <label>Return Date: {{return_date}}</label>
                            <button formaction="/trips/delete-trip" class="submitButton">Delete Trip</button>
                         </div>
                        <input type="hidden" value="{{trip_id}}" name="trip_id"/>
                    </form>
                </div>

            {{/allTrips}}

        </div>
    </div>
    {{ > footer}}
    </body>
</html>